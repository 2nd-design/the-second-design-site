---
import type { ImageMetadata } from 'astro';
import Image from '~/components/common/Image.astro';

import { APP_BLOG } from 'astrowind:config';
import type { Post } from '~/types';

import { getPermalink } from '~/utils/permalinks';
import { findImage } from '~/utils/images';
import { getFormattedDate } from '~/utils/utils';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const image = (await findImage(post.image)) as ImageMetadata | undefined;

const link = APP_BLOG?.post?.isEnabled ? getPermalink(post.permalink, 'post') : '';
---

<article class="flex gap-4 p-4 rounded-lg hover:bg-gray-50 dark:hover:bg-slate-800/50 transition-colors duration-200">
  {
    image && link && (
      <a href={link} class="flex-shrink-0">
        <div class="w-20 h-20 md:w-24 md:h-24 overflow-hidden rounded-lg bg-gray-200 dark:bg-slate-700">
          <Image
            src={image}
            class="object-cover w-full h-full"
            widths={[96, 192]}
            width={96}
            height={96}
            sizes="96px"
            alt={post.title}
            loading="lazy"
            decoding="async"
          />
        </div>
      </a>
    )
  }
  <div class="flex-grow min-w-0">
    <div class="text-xs text-gray-500 dark:text-gray-400 mb-1">
      <time datetime={String(post.publishDate)}>{getFormattedDate(post.publishDate)}</time>
      {post.category && (
        <>
          <span class="mx-1">Â·</span>
          <a class="hover:underline text-primary dark:text-blue-400" href={getPermalink(post.category.slug, 'category')}>
            {post.category.title}
          </a>
        </>
      )}
    </div>
    <h2 class="text-base md:text-lg font-semibold leading-snug mb-1 dark:text-slate-200">
      {
        link ? (
          <a class="hover:text-primary dark:hover:text-blue-400 transition-colors" href={link}>
            {post.title}
          </a>
        ) : (
          post.title
        )
      }
    </h2>
    {post.excerpt && (
      <p class="text-sm text-gray-600 dark:text-slate-400 line-clamp-2">{post.excerpt}</p>
    )}
  </div>
</article>
