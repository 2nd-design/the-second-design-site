---
import Layout from '~/layouts/PageLayout.astro';
import { Icon } from 'astro-icon/components';

const metadata = {
  title: 'Real World Ready — The Second Design',
  description:
    'A flagship program that helps young people build practical skills, habits, and mindsets for moving in the real world.',
};
---

<Layout metadata={metadata}>
  <!-- Hero ************************************* -->
  <section class="relative overflow-hidden min-h-[90vh] flex items-center bg-slate-950">
    <!-- Animated gradient background -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 bg-gradient-to-br from-violet-600/20 via-slate-950 to-emerald-600/20"></div>
      <div class="absolute top-0 left-1/4 w-[600px] h-[600px] bg-violet-500/30 rounded-full blur-[120px] animate-pulse"></div>
      <div class="absolute bottom-0 right-1/4 w-[500px] h-[500px] bg-emerald-500/20 rounded-full blur-[100px] animate-pulse" style="animation-delay: 1s;"></div>
    </div>

    <!-- Grid pattern overlay -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.02)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.02)_1px,transparent_1px)] bg-[size:60px_60px]"></div>

    <div class="relative container max-w-7xl mx-auto px-4 sm:px-6 py-20">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Text -->
        <div class="max-w-2xl">
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-white/5 border border-white/10 backdrop-blur-sm mb-8">
            <span class="relative flex h-2 w-2">
              <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
              <span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
            </span>
            <span class="text-xs font-medium text-slate-300 tracking-wide">Flagship Program</span>
          </div>

          <!-- Main headline -->
          <h1 class="text-5xl sm:text-6xl md:text-7xl font-bold tracking-tight text-white mb-6">
            Real World
            <span class="block bg-gradient-to-r from-violet-400 via-blue-400 to-emerald-400 bg-clip-text text-transparent">
              Ready
            </span>
          </h1>

          <p class="text-xl sm:text-2xl text-slate-400 leading-relaxed mb-10">
            Helping young people build the skills, habits, and inner tools to move in the real world — starting things, making decisions, and navigating careers with intention.
          </p>

          <!-- CTA -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a
              href="/contact"
              class="group inline-flex items-center justify-center gap-2 rounded-full bg-white text-slate-900
                     px-8 py-4 text-sm font-semibold shadow-2xl shadow-white/20
                     hover:bg-slate-100 transition-all duration-300 hover:scale-105"
            >
              Bring this to your organisation
              <Icon name="tabler:arrow-right" class="w-4 h-4 group-hover:translate-x-1 transition-transform" />
            </a>
            <a
              href="#case-studies"
              class="inline-flex items-center justify-center gap-2 rounded-full bg-white/5 border border-white/10 text-white
                     px-8 py-4 text-sm font-semibold backdrop-blur-sm
                     hover:bg-white/10 transition-all duration-300"
            >
              See it in action
            </a>
          </div>
        </div>

        <!-- Hero Image -->
        <div class="relative hidden lg:block">
          <div class="absolute -inset-4 bg-gradient-to-tr from-violet-500/20 via-blue-500/10 to-emerald-500/20 rounded-3xl blur-2xl"></div>
          <div class="relative rounded-3xl overflow-hidden border border-white/10 shadow-2xl shadow-black/50">
            <img
              src="https://images.unsplash.com/photo-1524178232363-1fb2b075b655?auto=format&fit=crop&w=1200&q=80"
              alt="Indian students in a workshop session"
              class="w-full aspect-[4/3] object-cover"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-slate-950/60 via-transparent to-transparent"></div>
            <div class="absolute bottom-0 left-0 right-0 p-6">
              <div class="flex items-center gap-3">
                <img src="https://avatars.githubusercontent.com/u/65708026?s=200&v=4" alt="TinkerHub" class="h-8 w-8 rounded-lg" />
                <img src="https://fossunited.org/files/foss-united-logo.svg" alt="FOSS United" class="h-6 w-auto invert opacity-80" />
                <span class="text-white/60 text-sm ml-2">& more partners</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 flex flex-col items-center gap-2 text-slate-500">
      <span class="text-xs tracking-widest uppercase">Scroll</span>
      <div class="w-px h-8 bg-gradient-to-b from-slate-500 to-transparent"></div>
    </div>
  </section>

  <!-- What makes it different ***************** -->
  <section class="py-24 sm:py-32 bg-white dark:bg-slate-950 relative overflow-hidden">
    <div class="absolute top-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-slate-200 dark:via-slate-800 to-transparent"></div>

    <div class="container max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <!-- Image collage -->
        <div class="relative order-2 lg:order-1">
          <div class="grid grid-cols-2 gap-4">
            <div class="space-y-4">
              <div class="rounded-2xl overflow-hidden shadow-lg">
                <img
                  src="https://images.unsplash.com/photo-1571260899304-425eee4c7efc?auto=format&fit=crop&w=600&q=80"
                  alt="Indian woman student with textbook"
                  class="w-full aspect-[4/5] object-cover hover:scale-105 transition-transform duration-500"
                />
              </div>
              <div class="rounded-2xl overflow-hidden shadow-lg">
                <img
                  src="https://images.unsplash.com/photo-1686624386665-4cd01b96d0f6?auto=format&fit=crop&w=600&q=80"
                  alt="Indian students taking notes in class"
                  class="w-full aspect-square object-cover hover:scale-105 transition-transform duration-500"
                />
              </div>
            </div>
            <div class="space-y-4 pt-8">
              <div class="rounded-2xl overflow-hidden shadow-lg">
                <img
                  src="https://images.unsplash.com/photo-1635246550194-11af93a2763f?auto=format&fit=crop&w=600&q=80"
                  alt="Indian students on university campus"
                  class="w-full aspect-square object-cover hover:scale-105 transition-transform duration-500"
                />
              </div>
              <div class="rounded-2xl overflow-hidden shadow-lg">
                <img
                  src="https://images.unsplash.com/photo-1495995424756-6a5a3f9e7543?auto=format&fit=crop&w=600&q=80"
                  alt="Indian student graduation celebration"
                  class="w-full aspect-[4/5] object-cover hover:scale-105 transition-transform duration-500"
                />
              </div>
            </div>
          </div>
        </div>

        <!-- Text content -->
        <div class="space-y-8 order-1 lg:order-2">
          <div class="space-y-4">
            <p class="text-sm font-semibold tracking-[0.2em] text-violet-600 dark:text-violet-400 uppercase">The Approach</p>
            <h2 class="text-4xl sm:text-5xl font-bold tracking-tight text-slate-900 dark:text-white">
              Not lectures.<br/>
              <span class="text-slate-400 dark:text-slate-500">Real practice.</span>
            </h2>
          </div>
          <p class="text-lg text-slate-600 dark:text-slate-400 leading-relaxed">
            Real World Ready is not about motivational speeches or neat lists of "skills". It's a sequence of experiences where students actually do things — start projects, make decisions, communicate, and see themselves differently.
          </p>

          <div class="grid gap-4">
            <!-- Card 1 -->
            <div class="group relative p-6 rounded-2xl bg-gradient-to-br from-violet-500/10 to-violet-500/5 border border-violet-500/20 hover:border-violet-500/40 transition-all duration-300">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-violet-500/20 flex items-center justify-center">
                  <Icon name="tabler:sparkles" class="w-6 h-6 text-violet-500 dark:text-violet-400" />
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900 dark:text-white mb-1">Practice-heavy sessions</h3>
                  <p class="text-sm text-slate-600 dark:text-slate-400">Students actually do things in the session — not passive lectures.</p>
                </div>
              </div>
            </div>

            <!-- Card 2 -->
            <div class="group relative p-6 rounded-2xl bg-gradient-to-br from-blue-500/10 to-blue-500/5 border border-blue-500/20 hover:border-blue-500/40 transition-all duration-300">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-blue-500/20 flex items-center justify-center">
                  <Icon name="tabler:route" class="w-6 h-6 text-blue-500 dark:text-blue-400" />
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900 dark:text-white mb-1">Systems thinking</h3>
                  <p class="text-sm text-slate-600 dark:text-slate-400">Careers and projects as systems — broken into small, deliberate experiments.</p>
                </div>
              </div>
            </div>

            <!-- Card 3 -->
            <div class="group relative p-6 rounded-2xl bg-gradient-to-br from-emerald-500/10 to-emerald-500/5 border border-emerald-500/20 hover:border-emerald-500/40 transition-all duration-300">
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 rounded-xl bg-emerald-500/20 flex items-center justify-center">
                  <Icon name="tabler:rocket" class="w-6 h-6 text-emerald-500 dark:text-emerald-400" />
                </div>
                <div>
                  <h3 class="font-semibold text-slate-900 dark:text-white mb-1">Ship real work</h3>
                  <p class="text-sm text-slate-600 dark:text-slate-400">Real-world projects and outreach — not just "doing assignments".</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Bento grid section ********************** -->
  <section class="py-24 sm:py-32 bg-slate-50 dark:bg-slate-900/50">
    <div class="container max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <p class="text-sm font-semibold tracking-[0.2em] text-blue-600 dark:text-blue-400 uppercase mb-4">Outcomes</p>
        <h2 class="text-4xl sm:text-5xl font-bold tracking-tight text-slate-900 dark:text-white mb-6">
          What students walk away with
        </h2>
      </div>

      <!-- Bento Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <!-- Large card -->
        <div class="md:col-span-2 relative rounded-3xl overflow-hidden text-white min-h-[300px]">
          <img
            src="https://images.unsplash.com/photo-1495995424756-6a5a3f9e7543?auto=format&fit=crop&w=1200&q=80"
            alt="Indian student celebrating graduation"
            class="absolute inset-0 w-full h-full object-cover"
          />
          <div class="absolute inset-0 bg-gradient-to-br from-violet-600/90 to-violet-700/80"></div>
          <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
          <div class="relative z-10 h-full flex flex-col justify-end p-8">
            <div class="w-16 h-16 rounded-2xl bg-white/20 backdrop-blur-sm flex items-center justify-center mb-4">
              <Icon name="tabler:flame" class="w-8 h-8 text-white" />
            </div>
            <h3 class="text-2xl font-bold mb-2">Start and keep moving</h3>
            <p class="text-violet-100 max-w-md">
              Tools to move from overthinking to action — handling fear, perfectionism, and confusion so ideas turn into visible proof of work.
            </p>
          </div>
        </div>

        <!-- Quote card -->
        <div class="rounded-3xl bg-white dark:bg-slate-800 p-8 flex flex-col justify-center border border-slate-200 dark:border-slate-700">
          <blockquote class="text-lg font-medium text-slate-900 dark:text-white mb-3">"It changed how I think about starting things."</blockquote>
          <p class="text-slate-500 dark:text-slate-400 text-sm">— Student, Beyond the Blueprint</p>
        </div>

        <!-- Medium card -->
        <div class="rounded-3xl bg-white dark:bg-slate-800 p-8 border border-slate-200 dark:border-slate-700">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-blue-100 to-blue-50 dark:from-blue-500/20 dark:to-blue-500/10 flex items-center justify-center mb-4">
            <Icon name="tabler:compass" class="w-8 h-8 text-blue-600 dark:text-blue-400" />
          </div>
          <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">Clarity & navigation</h3>
          <p class="text-slate-600 dark:text-slate-400 text-sm">
            Ways to think about careers as systems — mapping options, running small tests, making decisions under uncertainty.
          </p>
        </div>

        <!-- Accent card -->
        <div class="rounded-3xl bg-gradient-to-br from-blue-600 to-blue-700 p-8 flex flex-col justify-center min-h-[200px]">
          <Icon name="tabler:quote" class="w-8 h-8 text-blue-300 mb-3" />
          <p class="text-blue-50 text-sm">"I finally understand that imperfect action beats perfect planning."</p>
        </div>

        <!-- Medium card -->
        <div class="rounded-3xl bg-white dark:bg-slate-800 p-8 border border-slate-200 dark:border-slate-700">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-emerald-100 to-emerald-50 dark:from-emerald-500/20 dark:to-emerald-500/10 flex items-center justify-center mb-4">
            <Icon name="tabler:messages" class="w-8 h-8 text-emerald-600 dark:text-emerald-400" />
          </div>
          <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-2">Communication & collaboration</h3>
          <p class="text-slate-600 dark:text-slate-400 text-sm">
            Practice expressing clearly, asking for help, reaching out to strangers, and working with others on real work.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Who it's for ***************************** -->
  <section class="py-24 sm:py-32 bg-white dark:bg-slate-950 relative">
    <div class="container max-w-7xl mx-auto px-4 sm:px-6">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <p class="text-sm font-semibold tracking-[0.2em] text-emerald-600 dark:text-emerald-400 uppercase mb-4">Partners</p>
        <h2 class="text-4xl sm:text-5xl font-bold tracking-tight text-slate-900 dark:text-white mb-6">
          Who it's for
        </h2>
        <p class="text-lg text-slate-600 dark:text-slate-400">
          We partner with organisations that work with young people. We also run open cohorts for individuals.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6">
        <!-- Colleges -->
        <div class="group relative bg-white dark:bg-slate-900 rounded-3xl overflow-hidden shadow-xl shadow-slate-200/50 dark:shadow-black/20 border border-slate-100 dark:border-slate-800 hover:border-violet-300 dark:hover:border-violet-700 transition-all duration-500 hover:-translate-y-1">
          <div class="h-32 relative overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1635246550194-11af93a2763f?auto=format&fit=crop&w=600&q=80"
              alt="Indian university campus"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-violet-600/90 to-violet-600/40"></div>
          </div>
          <div class="p-8">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-violet-500 to-violet-600 flex items-center justify-center -mt-14 mb-4 shadow-lg shadow-violet-500/30 relative border-4 border-white dark:border-slate-900">
              <Icon name="tabler:school" class="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-3">Colleges & Universities</h3>
            <p class="text-slate-600 dark:text-slate-400 text-sm mb-4">
              A parallel "real-world curriculum" alongside degrees.
            </p>
            <ul class="space-y-2 text-sm text-slate-500 dark:text-slate-500">
              <li class="flex items-center gap-2">
                <div class="w-1 h-1 rounded-full bg-violet-500"></div>
                Engineering & science colleges
              </li>
              <li class="flex items-center gap-2">
                <div class="w-1 h-1 rounded-full bg-violet-500"></div>
                Professional degree programs
              </li>
              <li class="flex items-center gap-2">
                <div class="w-1 h-1 rounded-full bg-violet-500"></div>
                Innovation / entrepreneurship cells
              </li>
            </ul>
          </div>
        </div>

        <!-- Nonprofits -->
        <div class="group relative bg-white dark:bg-slate-900 rounded-3xl overflow-hidden shadow-xl shadow-slate-200/50 dark:shadow-black/20 border border-slate-100 dark:border-slate-800 hover:border-emerald-300 dark:hover:border-emerald-700 transition-all duration-500 hover:-translate-y-1">
          <div class="h-32 relative overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1524178232363-1fb2b075b655?auto=format&fit=crop&w=600&q=80"
              alt="Workshop with students"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-emerald-600/90 to-emerald-600/40"></div>
          </div>
          <div class="p-8">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-emerald-500 to-emerald-600 flex items-center justify-center -mt-14 mb-4 shadow-lg shadow-emerald-500/30 relative border-4 border-white dark:border-slate-900">
              <Icon name="tabler:heart-handshake" class="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-3">Nonprofits & Foundations</h3>
            <p class="text-slate-600 dark:text-slate-400 text-sm mb-4">
              Youth programs where initiative and career readiness matter.
            </p>
            <ul class="space-y-2 text-sm text-slate-500 dark:text-slate-500">
              <li class="flex items-center gap-2">
                <div class="w-1 h-1 rounded-full bg-emerald-500"></div>
                Fellowship & scholarship cohorts
              </li>
              <li class="flex items-center gap-2">
                <div class="w-1 h-1 rounded-full bg-emerald-500"></div>
                Community learning initiatives
              </li>
              <li class="flex items-center gap-2">
                <div class="w-1 h-1 rounded-full bg-emerald-500"></div>
                CSR programs for youth skilling
              </li>
            </ul>
          </div>
        </div>

        <!-- Communities -->
        <div class="group relative bg-white dark:bg-slate-900 rounded-3xl overflow-hidden shadow-xl shadow-slate-200/50 dark:shadow-black/20 border border-slate-100 dark:border-slate-800 hover:border-blue-300 dark:hover:border-blue-700 transition-all duration-500 hover:-translate-y-1">
          <div class="h-32 relative overflow-hidden">
            <img
              src="https://images.unsplash.com/photo-1686624386665-4cd01b96d0f6?auto=format&fit=crop&w=600&q=80"
              alt="Students collaborating"
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-blue-600/90 to-blue-600/40"></div>
          </div>
          <div class="p-8">
            <div class="w-14 h-14 rounded-2xl bg-gradient-to-br from-blue-500 to-blue-600 flex items-center justify-center -mt-14 mb-4 shadow-lg shadow-blue-500/30 relative border-4 border-white dark:border-slate-900">
              <Icon name="tabler:users-group" class="w-7 h-7 text-white" />
            </div>
            <h3 class="text-xl font-bold text-slate-900 dark:text-white mb-3">Student & Tech Communities</h3>
            <p class="text-slate-600 dark:text-slate-400 text-sm mb-4">
              Turn curiosity into projects and real opportunities.
            </p>
            <ul class="space-y-2 text-sm text-slate-500 dark:text-slate-500">
              <li class="flex items-center gap-2">
                <div class="w-1 h-1 rounded-full bg-blue-500"></div>
                Developer & open-source communities
              </li>
              <li class="flex items-center gap-2">
                <div class="w-1 h-1 rounded-full bg-blue-500"></div>
                Campus clubs & maker spaces
              </li>
              <li class="flex items-center gap-2">
                <div class="w-1 h-1 rounded-full bg-blue-500"></div>
                Startup / innovation communities
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Program formats *************************** -->
  <section class="py-24 sm:py-32 bg-slate-950 text-white relative overflow-hidden">
    <!-- Background pattern -->
    <div class="absolute inset-0 bg-[linear-gradient(rgba(255,255,255,0.03)_1px,transparent_1px),linear-gradient(90deg,rgba(255,255,255,0.03)_1px,transparent_1px)] bg-[size:40px_40px]"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[400px] bg-gradient-to-b from-violet-500/20 to-transparent blur-3xl"></div>

    <div class="relative container max-w-7xl mx-auto px-4 sm:px-6">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <p class="text-sm font-semibold tracking-[0.2em] text-violet-400 uppercase mb-4">Formats</p>
          <h2 class="text-4xl sm:text-5xl font-bold tracking-tight mb-6">
            Flexible formats
          </h2>
          <p class="text-lg text-slate-400 mb-8">
            A growing library of 30+ sessions. We select and sequence what makes sense for your learners.
          </p>

          <div class="space-y-6">
            <div class="group p-6 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-sm hover:bg-white/10 hover:border-white/20 transition-all duration-500">
              <div class="flex items-start gap-4">
                <div class="text-4xl font-bold text-violet-400">01</div>
                <div>
                  <h3 class="text-lg font-bold mb-1">Signature series</h3>
                  <p class="text-slate-400 text-sm">Multi-week journey — your flagship program.</p>
                </div>
              </div>
            </div>

            <div class="group p-6 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-sm hover:bg-white/10 hover:border-white/20 transition-all duration-500">
              <div class="flex items-start gap-4">
                <div class="text-4xl font-bold text-blue-400">02</div>
                <div>
                  <h3 class="text-lg font-bold mb-1">Intensive bootcamps</h3>
                  <p class="text-slate-400 text-sm">Short, high-energy formats (2–5 days).</p>
                </div>
              </div>
            </div>

            <div class="group p-6 rounded-2xl bg-white/5 border border-white/10 backdrop-blur-sm hover:bg-white/10 hover:border-white/20 transition-all duration-500">
              <div class="flex items-start gap-4">
                <div class="text-4xl font-bold text-emerald-400">03</div>
                <div>
                  <h3 class="text-lg font-bold mb-1">Custom tracks</h3>
                  <p class="text-slate-400 text-sm">Tailored for specific cohorts and needs.</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Image -->
